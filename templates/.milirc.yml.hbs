{{#with (r__head mili.stack)}}
  {{#if (r__equals type "npm")}}
template: npm:{{name}}
    {{#if registry}}
registry: {{registry}}
    {{/if}}
  {{/if}}
  {{#unless (r__equals type "npm")}}
template: {{name}}
  {{/unless}}
version: {{version}}
{{/with}}
{{#unless (r__isEmpty answers)}}
answers:
  {{#each answers}}
  {{@key}}: {{this}}
  {{/each}}
{{/unless}}
